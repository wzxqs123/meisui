}
.live-infosec {
  display: flex;
  flex-flow: column wrap;
}
.live-infosec view {
  padding-top: 22rpx;
  margin-bottom: 14rpx;
  color: #323233;
  font-size: 32rpx;
}
.live-infosec text {
  color: #979799;
  font-size: 28rpx;
  line-height: 42rpx;
}
.live-alertbg {
  z-index: 100;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.3);
}
.live-alert {
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  width: 650rpx;
  height: 340rpx;
  padding-top: 60rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.live-loadtit {
  width: 270rpx;
  height: 44rpx;
  margin-bottom: 38rpx;
}
.live-copytip {
  padding: 0 50rpx;
  margin-bottom: 50rpx;
  line-height: 42rpx;
  font-size: 28rpx;
  color: #979799;
  white-space: pre-wrap;
}
.live-copybut {
  display: block;
  width: 300rpx;
  height: 88rpx;
}
.live-alertclose {
  top: 20rpx;
  right: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.live-alertclose cover-view {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 100%;
  height: 3rpx;
  background-color: #000;
  border-radius: 10rpx;
}
.live-alertclose cover-view:nth-child(1) {
  transform: rotate(45deg)
}
.live-alertclose cover-view:nth-child(2) {
  transform: rotate(-45deg)
}