/* pages/live/live.wxss */
page {
  height: 100%;
  background-color: #fff;
}
live-player {
  display: block;
}
live-player, 
.live-noplayer {
  width: 100%;
  height: 500rpx;
  padding: 0;
}
.live-noplayer {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  background-color: #323233;
}
.live-noplayercon {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  width: 570rpx;
  height: 320rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}
.live-noplayerpic {
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
}
.live-noplayertip {
  font-size: 28rpx;
  color: #fff;
}
.live-navs {
  display: flex;
  width: 750rpx;
  height: 80rpx;
}
.live-navitem {
  position: relative;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #979799;
}
.live-itemselbor {
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
}
.live-navitemsel {
  color: #5d84ff;
}
.live-navitemsel .live-itemselbor, 
.live-download {
  background: rgb(93,132,255); /* Old browsers */
  background: -moz-linear-gradient(left, rgba(93,132,255,1) 0%, rgba(150,220,255,1) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(left, rgba(93,132,255,1) 0%,rgba(150,220,255,1) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to right, rgba(93,132,255,1) 0%,rgba(150,220,255,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#5d84ff', endColorstr='#96dcff',GradientType=1 ); /* IE6-9 */
}
.live-foot {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 68rpx;
  padding: 15rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 -1rpx 0 0 #eaeaea;
}
.live-input {
  width: 480rpx;
  height: 68rpx;
  padding: 0 30rpx;
  background-color: #f2f3f4;
  line-height: 68rpx;
  font-size: 26rpx;
  border-radius: 35rpx;
}
.live-placeholder {
  color: #979799;
}
.live-download {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  height: 68rpx;
  border-radius: 35rpx;
}
.live-download image {
  width: 24rpx;
  height: 26rpx;
  margin: 0 3rpx 0 0;
}
.live-download text {
  font-size: 26rpx;
  color: #fff;
}
.live-chatcon {
  display: flex;
  flex-flow: column wrap;
}
.live-chatcon {
  overflow: hidden;
}
.live-anchorinfo {
  overflow: auto;
}
.live-chatcon, 
.live-anchorinfo {
  height: 100%;
}
.live-chatitem {
  display: flex;
  flex-flow: row wrap;
  padding: 0 25rpx 15rpx;
}
.live-chatname {
  line-height: 36rpx;
  color: #6493e2;
  font-size: 28rpx;
}
.live-intoroom {
  margin-left: 15rpx;
}
.live-pad {
  padding: 0 15rpx;
}
.live-chatname text {
  color: #323233;
}
.live-chatname .live-chatxt {
  color: #777;
}
.live-infocon {
  padding: 0 30rpx;
}
.live-infotop, 
.live-anchortag {
  display: flex;
  flex-flow: row nowrap;
}
.live-infotop {
  padding: 30rpx 0;
  box-shadow: 0 2rpx 0 0 #f2f2f5;
}
.live-anchorpic {
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.live-anchordel {
  display: flex;
  flex-flow: column;
  justify-content: center;
}
.live-anchorname {
  color: #323233;
  margin-bottom: 8rpx;
  font-size: 32rpx;
}
.live-anchorid {
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #979799;
}
.live-anchorgrade {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 30rpx;
  margin-right: 10rpx;
  color: #fff;
  font-size: 18rpx;
  border-radius: 28rpx;
}
